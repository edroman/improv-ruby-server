= form_for @user, :url => '/user' do |f|
  = render :partial => "error_messages", :locals => { :resource => @user }
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :phone
    %br/
    = f.text_field :phone
  .field
    = f.label :password
    %br/
    = f.text_field :password
  .actions
    = f.submit