= form_for(@story) do |f|
  = render :partial => "error_messages", :locals => { :resource => @story }
  .field
    = f.label :number
    %br/
    = f.number_field :number
  .field
    = f.label :turn
    %br/
    = f.number_field :turn
  .field
    = f.label :sentences
    %br/
    = f.text_area :sentences
  .field
    = f.label :constraints
    %br/
    = f.text_area :constraints
  .actions
    = f.submit